{
  "name": "@clutchd/twx",
  "version": "2.0.0",
  "description": "Combining the powers of @clutchd/clsx and tailwind-merge.",
  "keywords": [
    "clutchd",
    "clsx",
    "twx",
    "tailwind"
  ],
  "bugs": {
    "url": "https://github.com/clutchd/clutchd/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clutchd/clutchd",
    "directory": "packages/twx"
  },
  "author": "Clutchd, LLC",
  "sideEffects": false,
  "main": "dist/index",
  "module": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --minify",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx",
    "prepublish": "bun run build",
    "test": "bun test --coverage"
  },
  "dependencies": {
    "@clutchd/clsx": "workspace:*",
    "tailwind-merge": "1.14.0"
  },
  "devDependencies": {
    "@clutchd/tsconfig": "workspace:*",
    "@types/bun": "^1.0.1",
    "@types/node-fetch": "2.6.10",
    "node-fetch": "2.6.7",
    "tsup": "7.2.0",
    "typescript": "5.2.2"
  }
}
