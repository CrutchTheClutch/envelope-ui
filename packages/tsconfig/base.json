{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "/**/*.ts",
    "/**/*.tsx",
    "/**/*.d.ts",
    "/**/node_modules/@clutchd/**/*.d.t.ts"
  ],
  "exclude": [
    "/**/build",
    "/**/dist",
    "/**/node_modules",
    "/**/*.test.ts",
    "/**/*.test.tsx"
  ]
}
