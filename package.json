{
  "name": "clutchd",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "bench/*",
    "packages/*",
    "ui/*"
  ],
  "scripts": {
    "benchmark": "turbo run benchmark",
    "build": "turbo run build",
    "changeset": "bunx changeset",
    "clean": "find . -type d \\( -name '.next'  -o -name '.turbo' -o -name 'coverage' -o -name 'dist' -o -name 'node_modules' \\) -prune -print -exec rm -rf '{}' \\;",
    "dev": "turbo run dev --parallel",
    "preinstall": "bunx only-allow bun",
    "format": "prettier --write \"**/*.{js,json,jsx,ts,tsx,md,mdx}\"",
    "postinstall": "bunx patch-package && manypkg check",
    "lint": "turbo run lint",
    "release": "turbo run build && changeset publish",
    "test": "turbo run test",
    "typesync": "bunx typesync",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "@changesets/cli": "2.27.1",
    "@clutchd/eslint-config-clutchd": "workspace:*",
    "@manypkg/cli": "0.21.0",
    "eslint": "8.56.0",
    "prettier": "2.8.8",
    "turbo": "latest"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
