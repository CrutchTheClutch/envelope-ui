{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf .next .turbo node_modules coverage package-lock.json",
    "format": "prettier --write \"**/*.{js,json,jsx,ts,tsx,md,mdx}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  }
}
